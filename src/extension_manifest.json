{
  "manifest_version": 2,
  "name": "nekoton",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'"
}
